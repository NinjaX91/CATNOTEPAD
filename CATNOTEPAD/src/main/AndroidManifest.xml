<manifest package="ninja.cfg.catnotepad"
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
	      android:versionCode="6"
	      android:versionName="1.4">

	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<application
			android:name="ninja.cfg.catnotepad.App"
			android:allowBackup="true"
			android:icon="@mipmap/ic_launcher"
			android:label="@string/app_name"
			android:supportsRtl="false"
			android:theme="@style/AppTheme"
			tools:replace="android:supportsRtl"
			>

		<activity
				android:name="ninja.cfg.catnotepad.activities.home.HomeActivity"
				android:label="@string/app_name"
				>
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.VIEW"/>

				<category android:name="android.intent.category.DEFAULT"/>
				<category android:name="android.intent.category.BROWSABLE"/>

				<data android:scheme="file"/>
				<data android:mimeType="*/*"/>
				<data android:pathPattern=".*\\.nbu"/>
				<data android:host="*"/>
			</intent-filter>
		</activity>
		<activity
				android:name="ninja.cfg.catnotepad.activities.editfolders.EditFoldersActivity"
				android:label="Edit Folders"
				>
		</activity>
		<activity
				android:name="ninja.cfg.catnotepad.activities.note.NoteActivity"
				android:label="Note Activity"
				android:theme="@style/AppTheme.WhiteBackground"
				android:windowSoftInputMode="adjustResize|stateUnchanged"
				>
		</activity>
		<activity
				android:name="ninja.cfg.catnotepad.activities.DebugActivity"
				android:label="Debug Activity"
				>
		</activity>
		<activity
				android:name="ninja.cfg.catnotepad.activities.note.DrawingActivity"
				android:label="Drawing Activity"
				android:theme="@style/AppTheme.WhiteBackground"
				>
		</activity>
		<activity
				android:name="ninja.cfg.catnotepad.activities.addtofolders.AddToFoldersActivity"
				android:label="Edit Folders"
				>
		</activity>
	</application>

</manifest>
